// Add this to your existing ResumeAnalysis model

model ResumeAnalysis {
  id                    Int      @id @default(autoincrement())
  resumeId              Int
  executiveSummary      String   @db.Text
  overview              String?  @db.Text
  contentQuality        String?  @db.Text
  atsCompatibility      String?  @db.Text
  industryFit           String?  @db.Text
  formattingReview      String?  @db.Text
  skillsAnalysis        String?  @db.Text
  careerTrajectory      String?  @db.Text
  improvementSuggestions String?  @db.Text
  
  // Score fields - ensure all are included
  overallScore          Float    @default(0)
  contentScore          Float    @default(0)
  atsOptimizationScore  Float    @default(0)
  formattingScore       Float    @default(0)
  industryAlignmentScore Float   @default(0)
  skillsScore           Float    @default(0)
  grammarScore          Float    @default(0)
  clarityScore          Float    @default(0)
  
  // Other fields
  aiGeneratedImprovements Json?
  positionedSuggestions  Json?
  status                String   @default("pending")
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  resume                Resume   @relation(fields: [resumeId], references: [id], onDelete: Cascade)
}
